# 价格比价系统环境配置示例
# 复制此文件为 .env 并修改相应配置

# 应用配置
APP_NAME=价格比价系统
APP_VERSION=1.0.0
APP_ENV=production

# 数据库配置
DB_HOST=mysql
DB_PORT=3306
DB_NAME=price_compare
DB_USER=price_user
DB_PASSWORD=price_pass
DB_ROOT_PASSWORD=root

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# 后端服务配置
BACKEND_PORT=8080
BACKEND_JAVA_OPTS=-Xmx512m -Xms256m

# 前端服务配置
FRONTEND_PORT=80

# 日志配置
LOG_LEVEL=INFO
LOG_PATH=./logs

# 安全配置
JWT_SECRET=your-jwt-secret-key-here-change-in-production
JWT_EXPIRATION=86400

# 爬虫配置
CRAWLER_TIMEOUT=5000
CRAWLER_MAX_RETRIES=3
CRAWLER_RATE_LIMIT=1000

# 邮件配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# 监控配置
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true